<Window x:Class="DemTREN3.Cabinet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemTREN3"
        mc:Ignorable="d"
        Title="Кабинет" Height="450" Width="850" MinWidth="850" MinHeight="450">
    <Grid Background="Khaki">
        <DataGrid x:Name="Grid" AutoGenerateColumns="False" IsReadOnly="True" Margin="30">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID}" Header="ID" Width="*"/>
                <DataGridTextColumn Binding="{Binding Login}" Header="Login" Width="*"/>
                <DataGridTextColumn Binding="{Binding Password}" Header="Password" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="Delete" Content="Удалить" HorizontalAlignment="Left" Margin="0,395,0,0" Width="75" Height="24" Click="Delete_Click"/>

    </Grid>
</Window>
